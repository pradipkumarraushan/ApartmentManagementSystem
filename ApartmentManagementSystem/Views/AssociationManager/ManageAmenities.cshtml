@using PagedList.Mvc
@using ApartmentManagementSystem.Models
@model CombineModel
@{
    ViewBag.Title = "ManageAmenities";
}
<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
<script>
    var j = jQuery.noConflict();
    j(document).ready(function () {
        j('.datepicker').datepicker({
            
        })

    });
</script>
@using (Html.BeginForm())
{
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <h2>Manage Amenities</h2>
                <div class="form-group">
                    @Html.LabelFor(date => date.Search_bydate):
                    @Html.TextBoxFor(date => date.Search_bydate, new { @class = "datepicker" })
                </div>
                <div>
                    <input type="submit" id="btnsearch" value="Search" name="operation" style=" margin-left:120px" />
                </div>
            </div>
        </div>
        <br />
        <div class="row">
            <table id="data" class="table table-bordered ">
                <thead>
                    <tr>
                        <th>Booking_Id</th>
                        <th>Name</th>
                        <th>Cell</th>
                        <th>Block</th>
                        <th>Flat No</th>
                        <th>Booked For</th>
                        <th>On_date</th>
                        <th>Time</th>
                        <th>Status</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.familypagedlst.Count; i++)
                    {
                        <tr class="list">
                            <td>@Model.familypagedlst[i].Id</td>
                            <td>@Model.familypagedlst[i].Name</td>
                            <td>@Model.familypagedlst[i].Cell</td>
                            <td>@Model.familypagedlst[i].Block</td>
                            <td>@Model.familypagedlst[i].Flat_no</td>
                            <td>@Model.familypagedlst[i].Booking_for</td>
                            <td>@Model.familypagedlst[i].On_date</td>
                            <td>@Model.familypagedlst[i].On_time</td>
                            <td>@Model.familypagedlst[i].Status</td>
                            <td>
                                @Html.ActionLink("Edit", "EditBookedAmenitie", new { id = Model.familypagedlst[i].Id })

                                @Html.ActionLink("Delete", "", new { id = @Model.familypagedlst[i].Id })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div id="container" style="margin-left: 20px">
                <div class="pagination" style="margin-left: 400px">
                    @Html.PagedListPager(Model.familypagedlst, page => Url.Action("", new { page }))
                </div>
            </div>
        </div>
    </div>
}
